#!/usr/bin/env bash
set -e

bump="$1"

echo "Bumping $bump version..."
bundle exec rake "version:bump:$bump"
version="$(cat VERSION)"

echo "Updating gemspec..."
bundle exec rake gemspec

tag="v${version}"
echo "Committing..."
git commit -am "$tag"

echo "Creating tag $tag..."
git tag "$tag"

echo "Pushing..."
git push --tags origin main
